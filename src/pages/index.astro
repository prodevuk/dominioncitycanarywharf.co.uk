import SectionAbout from '../components/SectionAbout.astro';
import SectionGallery from '../components/SectionGallery.astro';
import SectionLeadership from '../components/SectionLeadership.astro';
import SectionQuote from '../components/SectionQuote.astro';
import SectionCTA from '../components/SectionCTA.astro';
import Footer from '../components/Footer.astro';
import yearOfEagleImage from '../assets/images/year_of_eagle.png';
---

<BaseLayout
  title="Dominion City Canary Wharf | Raising Leaders that Transform Society"
