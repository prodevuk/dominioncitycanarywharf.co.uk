    <h2 class="text-3xl font-bold text-dc-blue sm:text-4xl text-center mb-12">
      {title}
    </h2>
    <div class="prose prose-lg mx-auto max-w-3xl text-[rgb(var(--dc-ink))]">
      <p class="text-xl font-semibold text-dc-blue mb-6">
        {declaration[0]}
      </p>
      <p class="mb-6 leading-relaxed">
        {declaration[1]}
      </p>
      <p class="leading-relaxed">
        {declaration[2]}
      </p>
    </div>
  </div>
</section>
