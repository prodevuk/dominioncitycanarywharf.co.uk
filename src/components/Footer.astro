---
import dcLogo from '../assets/images/dc_logo.png';

const hierarchy = [
  { name: "DC Canary Wharf", href: "/" },
  { name: "DC London", href: "https://www.dominioncitylondon.co.uk/", target: "_blank" },
];
const motto = "Raising Leaders that transform society";
const worshipTime = "10AM every Sunday";
const venue = "Hilton Canary Wharf";
const postcode = "E14 9SH";
const mapsUrl = "https://www.google.com/maps/search/?api=1&query=Hilton+Canary+Wharf+E14+9SH";

const socialLinks = [
  { label: "Facebook", href: "https://www.facebook.com/profile.php?id=61586347899025", icon: "facebook" },
  { label: "Instagram", href: "https://instagram.com/dccanarywharf", icon: "instagram" },
  { label: "TikTok", href: "https://tiktok.com/@dccanarywharf", icon: "tiktok" },
];
---

<footer class="bg-[rgb(var(--dc-ink))] text-white/90 py-12 px-[var(--section-padding-x)]">
  <div class="mx-auto max-w-[var(--content-max)]">
    <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-8">
      <div>
        <a href="/" class="inline-flex items-center gap-2 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-[rgb(23,23,23)] rounded">
          <img src={dcLogo.src} alt="" class="h-8 w-auto" width="36" height="32" />
          <span class="font-semibold text-white text-lg">Dominion City Canary Wharf</span>
        </a>
        <p class="mt-1 text-white/80">{motto}</p>
        <p class="mt-1 text-white/70 text-sm">
          {worshipTime} <br/><a href={mapsUrl} target="_blank" rel="noopener noreferrer" class="text-white/80 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-[rgb(23,23,23)] rounded">{venue} <br/> {postcode}</a>
        </p>
        <ul class="mt-4 flex gap-3 list-none p-0 m-0" aria-label="Social media">
          {socialLinks.map((item) => (
            <li>
              <a
                href={item.href}
                class="flex h-10 w-10 items-center justify-center rounded-full text-white/80 hover:bg-white/15 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-[rgb(23,23,23)] transition-colors"
                aria-label={item.label}
              >
                {item.icon === "facebook" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" />
                  </svg>
                )}
                {item.icon === "instagram" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-4.123v-.08c0-2.643.012-2.987.06-4.043.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.994 2.013 9.339 2 11.976 2h.04zm-.08 1.802h-.04c-2.744 0-3.056.012-4.075.066-1.005.054-1.682.24-2.27.509a3.1 3.1 0 00-1.155 1.155c-.27.588-.455 1.265-.51 2.27-.053 1.02-.065 1.332-.065 4.076 0 2.744.012 3.056.066 4.075.054 1.005.24 1.682.51 2.27.27.588.567.885 1.154 1.155.589.27 1.266.455 2.27.51 1.02.053 1.331.065 4.076.065h.08c2.744 0 3.056-.012 4.075-.065 1.005-.054 1.682-.24 2.27-.51a3.1 3.1 0 001.155-1.155c.27-.588.455-1.265.51-2.27.053-1.02.065-1.331.065-4.076 0-2.744-.012-3.056-.066-4.075-.054-1.005-.24-1.682-.51-2.27a3.1 3.1 0 00-1.155-1.155c-.588-.27-1.265-.455-2.27-.51-1.02-.053-1.332-.065-4.076-.065zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 8.468a3.333 3.333 0 110-6.666 3.333 3.333 0 010 6.666zm5.338-9.87a1.2 1.2 0 110-2.4 1.2 1.2 0 010 2.4z" clip-rule="evenodd" />
                  </svg>
                )}
                {item.icon === "x" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                  </svg>
                )}
                {item.icon === "youtube" && (
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" />
                  </svg>
                )}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <nav aria-label="Church hierarchy">
        <p class="text-xs uppercase tracking-wider text-white/60 mb-2">Part of</p>
        <ul class="flex flex-wrap gap-x-4 gap-y-1 list-none p-0 m-0">
          {hierarchy.map((item, i) => (
            <li class="inline">
              <a
                href={item.href}
                class="text-white/90 hover:text-white focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-[rgb(23,23,23)] rounded"
                target={item.target}
                rel={item.target === "_blank" ? "noopener noreferrer" : undefined}
              >
                {item.name}
              </a>
              {i < hierarchy.length - 1 && <span class="text-white/50 mx-1" aria-hidden="true"> · </span>}
            </li>
          ))}
        </ul>
      </nav>
    </div>
    <p class="mt-10 pt-8 border-t border-white/20 text-sm text-white/60 text-center">
      © {new Date().getFullYear()} Dominion City. All rights reserved.
    </p>
  </div>
</footer>
